!!! Strict

%html{html_attrs("de-de")}
  %head
    %title= "Skippr Example App"

    %meta{"http-equiv" =>"Content-Type", :content=>"text/html; charset=utf-8"}/
    != stylesheet_link_tag "/stylesheets/default.css",  :media => "screen,projection"
%body
  - if flash[:error]
    #errorMsg
      %p
        != flash[:error]
  - if flash[:notice]
    #infoMsg
      %p
        != flash[:notice]
  -if flash[:success]
    #okMsg
      %p
        != flash[:success]
  .nav
    != link_to "Home", home_path
  .content
    != yield
  
  .footer
    %a{:href => "http://skippr.com/"}
      %img{:alt => "Skippr-logo-transp", :src => "/images/logos/skippr-logo-transp.png?1294827422"}/
    .copyright
      %a{:href => "http://fortytools.com", :target => "_blank"} Ein Tool von fortytools

